<h1>Scores</h1>

<table>
  <thead>
    <tr>
      <th>Point</th>
      <th>User</th>
      <th>Contest</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scores.each do |score| %>
      <tr>
        <td><%= score.point %></td>
        <td><%= score.user %></td>
        <td><%= score.contest %></td>
        <td><%= link_to 'Show', score %></td>
        <td><%= link_to 'Edit', edit_score_path(score) %></td>
        <td><%= link_to 'Destroy', score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

